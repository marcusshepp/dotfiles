## functions

mkmanagementcommand(){
    mkdir $1/management;
    touch $1/__init__.py;
    mkdir $1/management/commands;
    touch $1/management/commands/__init__.py;
    touch $1/management/commands/$2.py;
}
add(){
    git add .;
    git status;
    echo "http://www.emoji-cheat-sheet.com/";
}
work(){
    cd ~/projects/$1/;
    workon $1;
    clear;
}
mkdotfile(){
    DATE=`date +%Y-%d-%m`;
    cp ~/.$1 ~/projects/dotfiles/$1-$DATE;
}
add_ci(){
    git add --all;
    git commit;
}
# django
remkmigrations(){
    echo "remaking migrations for $1..";
    echo "**before**";
    ls $1/migrations;
    echo "**removing**";
    rm -rf $1/migrations/0001*;
    ls $1/migrations;
    echo "**makemigrations**";
    python manage.py makemigrations $1;
    ls $1/migrations;
}
